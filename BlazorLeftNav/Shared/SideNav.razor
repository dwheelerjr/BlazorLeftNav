  <!-- Sidebar -->
<div id="sidebar-container" class="@NavMenuCssClass d-none d-md-block">
    <NavMenu></NavMenu>

    <ul class="list-group nav-bottom">
        <li href="#" @onclick="@ToggleNavMenu" class="list-group-item list-group-item-action d-flex align-items-center">
            <div class="d-flex w-100 justify-content-start align-items-center">
                <span id="collapse-icon" class="collapse-icon mr-3"></span>
                <span id="collapse-text" class="menu-collapsed">Collapse</span>
            </div>
        </li>      
    </ul>
</div><!-- sidebar-container END -->

@code {
    [Parameter] public EventCallback<string> OnChange { get; set; }
    bool collapseNavMenu = false;

    string NavMenuCssClass = "sidebar-expanded";

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
        NavMenuCssClass = collapseNavMenu ? "sidebar-collapsed" : "sidebar-expanded";
        string result = collapseNavMenu ? "collapsed" : "expanded";
        OnChange.InvokeAsync(result);
    }
}
